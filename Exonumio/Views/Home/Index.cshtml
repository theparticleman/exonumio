@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Exonum.io</h1>
    <div class="row">
        <div class="col-lg-12">
            <h2><a href="http://dictionary.reference.com/browse/exonumia">exonumia (ek-suh-noo-mee-uh)</a></h2>
            items, as tokens or medals, that resemble money but are not intended to circulate as money.
        </div>
    </div>
    <p style="padding-top: 30px;">
        @Html.ActionLink("Sign Up »", "SignUp", "Account", routeValues: null, htmlAttributes: new { id = "signUpLink", @class = "btn btn-primary btn-large" })
    </p>
</div>



<div class="row lead">
    <div class="col-md-6">
        <h2>Gamify your organization</h2>
        <p>
            Create awards unique to your organization. Have people you work with sign up and start earning awards. Be awesome.
        </p>
        <p>
            <a href="#" class="btn btn-default">Search existing organizations &raquo;</a>
        </p>
    </div>
    <div class="col-md-6">
        <h2>Create an account. Or don't.</h2>
        <p>
            You can sign in with your existing Google account or create a new account here.
        </p>
        <p>
            @Html.ActionLink("Log in »", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
        </p>
    </div>
</div>